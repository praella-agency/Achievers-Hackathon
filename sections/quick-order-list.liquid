{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}

<script>
  // Get restricted provinces from Liquid (as plain string)
  window.productRestrictedPro = '{{ product.metafields.custom.restricted_provinces.value }}';

  function checkRestriction(province) {
    if (window.productRestrictedPro.indexOf(province) > -1) {
      console.warn('Restricted province detected:', province);

      const form = document.querySelector('.order-form');
      if (form) form.style.display = 'none';

      const warning = document.querySelector('.geo-restriction-warning');
      if (warning) warning.style.display = 'block';
    }
  }

  // Try getting cached province
  const cachedProvince = localStorage.getItem('shopifyUserProvince');
  if (cachedProvince) {
    window.customerProvince = cachedProvince;
    checkRestriction(cachedProvince);
  } else {
    // Fetch via IP API and store in localStorage
    fetch('https://ipapi.co/json')
      .then(res => res.json())
      .then(data => {
        const province = data.region_code; // e.g., "ON"
        window.customerProvince = province;
        localStorage.setItem('shopifyUserProvince', province);
        checkRestriction(province);
      })
      .catch(err => {
        console.error('Geo lookup failed:', err);
      });
  }
</script>

<div class="order-form">
  {% render 'quick-order-list',
    product: product,
    show_image: section.settings.show_image,
    show_sku: section.settings.show_sku
  %}
</div>
<div class="geo-restriction-warning center" style="display: none; color: red;">
  Access is restricted for this province
</div>


{% assign restricted = false %}
{% if product.metafields.custom.restricted_provinces contains customer_province %}
  {% assign restricted = true %}
{% endif %}

{% if restricted %}
  <div class="geo-restriction-warning">
    Sorry, this product is not available in your region ({{ customer_province }}).
  </div>
  <style>.quick-order-list__contents { display: none !important; }</style>
{% endif %}


{% schema %}
{
  "name": "t:sections.quick-order-list.name",
  "limit": 1,
  "enabled_on": {
    "templates": ["product"]
  },
  "settings": [
    {
      "type": "range",
      "id": "variants_per_page",
      "min": 5,
      "max": 50,
      "step": 1,
      "default": 50,
      "label": "t:sections.quick-order-list.settings.variants_per_page.label"
    },
    {
      "type": "checkbox",
      "id": "show_image",
      "default": false,
      "label": "t:sections.quick-order-list.settings.show_image.label"
    },
    {
      "type": "checkbox",
      "id": "show_sku",
      "default": false,
      "label": "t:sections.quick-order-list.settings.show_sku.label"
    },
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "t:sections.all.colors.label",
      "default": "scheme-1"
    },
    {
      "type": "header",
      "content": "t:sections.all.padding.section_padding_heading"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_top",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_bottom",
      "default": 36
    }
  ],
  "presets": [
    {
      "name": "t:sections.quick-order-list.presets.name"
    }
  ]
}
{% endschema %}
